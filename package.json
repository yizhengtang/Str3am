{
  "name": "str3am",
  "version": "0.1.0",
  "description": "Pay-per-view blockchain video streaming platform",
  "main": "index.js",
  "scripts": {
    "start": "node backend/index.js",
    "dev:backend": "nodemon backend/index.js",
    "dev:frontend": "cd frontend && npm start",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "install:all": "npm install && cd frontend && npm install",
    "postinstall": "npm install --prefix frontend --legacy-peer-deps",
    "build": "npm run build --prefix frontend"
  },
  "keywords": [
    "solana",
    "anchor",
    "blockchain",
    "video",
    "streaming",
    "pay-per-view"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@project-serum/anchor": "^0.26.0",
    "@solana/spl-token": "^0.3.8",
    "@solana/web3.js": "^1.78.0",
    "arweave": "^1.15.7",
    "bs58": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "mongoose": "^7.3.1",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "nodemon": "^2.0.22"
  }
}
